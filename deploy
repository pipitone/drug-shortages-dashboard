#!/bin/bash
set -euo pipefail
SCRIPTDIR="$(dirname "${0}")"

cd $SCRIPTDIR;
{
  echo "Begin: $(date)";
  Rscript -e "options('dsc_download'=F, 'dpd_download'=F); rmarkdown::render('dashboard.Rmd', quiet=T)";
  rsync -a dashboard.html pipitone.ca:websites/projects.jon.pipitone.ca/drug-shortages/index.html;
  echo "End: $(date)";
} &>> run.log
